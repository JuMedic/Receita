# ============================================
# CONFIGURAÇÕES DO SISTEMA DE RECEITAS VIRAIS
# ============================================

# ------------------------------
# MODO DE OPERAÇÃO
# ------------------------------
AUTO_MODE=true
CYCLE_MINUTES=10
ENABLE_SCHEDULER=true

# ------------------------------
# THRESHOLDS DE VIRALIZAÇÃO
# ------------------------------
THRESHOLD_VIRAL_VIEWS=100000
THRESHOLD_VIRAL_LIKES=5000
THRESHOLD_VIRAL_SHARES=500
THRESHOLD_GROWTH_RATE=50
TIME_WINDOW_HOURS=6

# ------------------------------
# FILTROS DE RECEITA
# ------------------------------
MAX_INGREDIENTS_VIRAL=10
MAX_PREP_MINUTES_VIRAL=30
MIN_INGREDIENTS=2
MIN_INSTRUCTIONS=2

# ------------------------------
# DEDUPLICAÇÃO
# ------------------------------
DUPLICATE_THRESHOLD=0.9
ENABLE_FUZZY_MATCHING=true

# ------------------------------
# APIs EXTERNAS (OPCIONAL)
# ------------------------------
TIKTOK_API_KEY=
TIKTOK_API_SECRET=
INSTAGRAM_GRAPH_API_TOKEN=
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=

# ------------------------------
# RSS FEEDS
# ------------------------------
RSS_FEED_URLS=https://example.com/feed1.xml,https://example.com/feed2.xml
RSS_CHECK_INTERVAL_MINUTES=15

# ------------------------------
# SCRAPING
# ------------------------------
ENABLE_SCRAPING=true
USE_PROXIES=false
PROXY_LIST=
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_DELAY_SECONDS=2
MAX_RETRIES=3

# ------------------------------
# MÍDIA E THUMBNAILS
# ------------------------------
MEDIA_DOWNLOAD_ENABLED=true
THUMBNAIL_GENERATION=true
THUMBNAIL_FRAME_TIME=8
MEDIA_STORAGE_PATH=./data/media
MAX_MEDIA_SIZE_MB=50

# ------------------------------
# DATABASE
# ------------------------------
DATABASE_PATH=./data/recipes.db
CACHE_PATH=./data/cache
ENABLE_DATABASE_BACKUP=true
BACKUP_INTERVAL_HOURS=24

# ------------------------------
# PUBLICAÇÃO
# ------------------------------
CMS_ENDPOINT=http://localhost:8000/api/recipes
CMS_API_KEY=
PUBLISH_BATCH_SIZE=5
RETRY_FAILED_PUBLISHES=true

# ------------------------------
# ANALYTICS & MÉTRICAS
# ------------------------------
ENABLE_ANALYTICS=true
METRICS_UPDATE_INTERVAL_MINUTES=30
VIRAL_RANKING_TOP_N=20
TRACK_USER_ENGAGEMENT=true

# ------------------------------
# NOTIFICAÇÕES
# ------------------------------
ENABLE_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# ------------------------------
# LOGGING
# ------------------------------
LOG_LEVEL=INFO
LOG_PATH=./logs
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10

# ------------------------------
# API SERVER (ADMIN/PUBLIC)
# ------------------------------
ENABLE_API_SERVER=true
API_HOST=0.0.0.0
API_PORT=8080
API_SECRET_KEY=change-this-secret-key-in-production
CORS_ORIGINS=*

# ------------------------------
# SEGURANÇA
# ------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15
ENABLE_API_AUTH=true

# ------------------------------
# PERFORMANCE
# ------------------------------
MAX_WORKERS=4
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
DATABASE_POOL_SIZE=10

# ------------------------------
# HASHTAGS E KEYWORDS
# ------------------------------
TIKTOK_HASHTAGS=receita,food,tiktokfood,receitafacil,cozinha,comida,receitasfit
INSTAGRAM_HASHTAGS=reels,receitas,receitasfit,comidacaseira,receitasdecozinha
YOUTUBE_KEYWORDS=shorts,receita,comida

# ------------------------------
# IDIOMA E LOCALIZAÇÃO
# ------------------------------
DEFAULT_LANGUAGE=pt-BR
CURRENCY=BRL
TIMEZONE=America/Sao_Paulo

# ------------------------------
# DESENVOLVIMENTO
# ------------------------------
DEBUG_MODE=false
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false
